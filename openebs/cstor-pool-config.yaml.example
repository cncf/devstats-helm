---
apiVersion: openebs.io/v1alpha1
kind: StoragePoolClaim
metadata:
  name: cstor-pool1
  annotations:
    cas.openebs.io/config: |
      - name: PoolResourceRequests
        value: |-
            memory: 2Gi
      - name: PoolResourceLimits
        value: |-
            memory: 16Gi
spec:
  name: cstor-pool1
  type: disk
  maxPools: 4
  poolSpec:
    poolType: striped
  disks:
    diskList:
